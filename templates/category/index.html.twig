{% extends 'base.html.twig' %}
{% block title %}Category List{% endblock %}
{% block body %}
<h1>Categories</h1>
<a href="{{ path('category_new') }}" class="btn btn-primary">Add Category</a>
<table class="table mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for category in categories %}
        <tr>
            <td>{{ category.id }}</td>
            <td>{{ category.name }}</td>
            <td>{{ category.description }}</td>
            <td>
                <a href="{{ path('category_show', {'id': category.id}) }}" class="btn btn-info btn-sm">View</a>
                <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                <form method="post" action="{{ path('category_delete', {'id': category.id}) }}" style="display:inline-block" onsubmit="return confirm('Are you sure?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                    <button class="btn btn-danger btn-sm">Delete</button>
                </form>
            </td>
        </tr>
    {% else %}
        <tr><td colspan="4">No categories found.</td></tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
