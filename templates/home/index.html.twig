{% extends 'base.html.twig' %}

{% block title %}Home - Symfony 7 App{% endblock %}

{% block body %}
    <div class="p-5 mb-4 bg-light rounded-3">
        <div class="container-fluid py-5">
            <h1 class="display-5 fw-bold">Welcome to Symfony 7 Application</h1>
            <p class="col-md-8 fs-4">A modern web application with user authentication and API endpoints.</p>
            
            {% if app.user %}
                <div class="alert alert-success">
                    <p>You are logged in as <strong>{{ app.user.email }}</strong></p>
                    <p>Roles: {{ app.user.roles|join(', ') }}</p>
                </div>
                <a href="{{ path('app_logout') }}" class="btn btn-danger btn-lg">Logout</a>
            {% else %}
                <p>Please log in to access protected features.</p>
                <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg">Login</a>
            {% endif %}
        </div>
    </div>
{% endblock %}
