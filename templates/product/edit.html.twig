{% extends 'base.html.twig' %}

{% block title %}Edit Product: {{ product.name }} - Symfony 7 App{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<style>
    .form-card {
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        border-radius: 10px;
    }
    .stock-indicator {
        padding: 5px 10px;
        border-radius: 5px;
        font-size: 0.9rem;
        font-weight: bold;
    }
    .stock-low { background-color: #f8d7da; color: #721c24; }
    .stock-medium { background-color: #fff3cd; color: #856404; }
    .stock-high { background-color: #d1e7dd; color: #0f5132; }
</style>
{% endblock %}

{% block body %}
<div class="container">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-6 fw-bold mb-2">
                        <i class="bi bi-pencil text-primary me-3"></i>Edit Product
                    </h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
                            <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Dashboard</a></li>
                            <li class="breadcrumb-item"><a href="{{ path('product_index') }}">Products</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Edit {{ product.name }}</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card form-card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-box-seam me-2"></i>Product Information
                    </h4>
                </div>
                <div class="card-body">
                    <!-- Current Status -->
                    <div class="alert alert-info mb-4">
                        <div class="row">
                            <div class="col-md-6">
                                <strong>Current Price:</strong> ${{ product.price }}
                            </div>
                            <div class="col-md-6">
                                <strong>Current Stock:</strong> 
                                <span class="stock-indicator {{ product.stock == 0 ? 'stock-low' : (product.stock <= 10 ? 'stock-medium' : 'stock-high') }}">
                                    {{ product.stock }} units
                                </span>
                            </div>
                        </div>
                    </div>

                    <form method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">
                                        <i class="bi bi-tag me-1"></i>Product Name *
                                    </label>
                                    <input type="text" name="name" class="form-control" value="{{ product.name }}" required>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">
                                        <i class="bi bi-currency-dollar me-1"></i>Price *
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input type="number" name="price" class="form-control" step="0.01" value="{{ product.price }}" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">
                                        <i class="bi bi-diagram-3 me-1"></i>Category *
                                    </label>
                                    {{ form_row(form.category, {
                                        'attr': {
                                            'class': 'form-select'
                                        }
                                    }) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">
                                        <i class="bi bi-diagram-3 me-1"></i>Subcategory
                                    </label>
                                    {{ form_row(form.subCategory, {
                                        'attr': {
                                            'class': 'form-select'
                                        }
                                    }) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">
                                        <i class="bi bi-image me-1"></i>Product Image
                                    </label>
                                    {{ form_row(form.image, {'attr': {'class': 'form-control'}}) }}
                                    {% if product.image %}
                                        <div class="mt-3 text-center">
                                            <img src="{{ asset('uploads/products/' ~ product.image) }}" alt="Product Image" class="img-thumbnail border border-primary" style="max-width: 250px; max-height: 250px;">
                                            <div class="form-text">Current image</div>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="bi bi-file-text me-1"></i>Description
                            </label>
                            <textarea name="description" class="form-control" rows="4" placeholder="Enter product description (optional)">{{ product.description }}</textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">
                                        <i class="bi bi-boxes me-1"></i>Stock Quantity *
                                    </label>
                                    <input type="number" name="stock" class="form-control" min="0" value="{{ product.stock }}" required>
                                    <div class="form-text">Number of units available</div>
                                </div>
                            </div>
                        </div>

                        <!-- Product Metadata -->
                        <div class="card bg-light mb-3">
                            <div class="card-body">
                                <h6 class="card-title">Product Metadata</h6>
                                <div class="row">
                                    <div class="col-md-6">
                                        <small class="text-muted">
                                            <i class="bi bi-calendar-plus me-1"></i>
                                            Created: {{ product.createdAt ? product.createdAt|date('M d, Y g:i A') : 'Unknown' }}
                                        </small>
                                    </div>
                                    <div class="col-md-6">
                                        <small class="text-muted">
                                            <i class="bi bi-calendar-edit me-1"></i>
                                            Last Updated: {{ product.updatedAt ? product.updatedAt|date('M d, Y g:i A') : 'Unknown' }}
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>Update Product
                            </button>
                            <a href="{{ path('product_show', {'id': product.id}) }}" class="btn btn-outline-info">
                                <i class="bi bi-eye me-2"></i>View Product
                            </a>
                            <a href="{{ path('product_index') }}" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
