{% extends 'base.html.twig' %}

{% block title %}Products Management - Symfony 7 App{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<style>
    .product-card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }
    .product-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    .product-price {
        font-size: 1.2rem;
        font-weight: bold;
        color: #28a745;
    }
    .stock-badge {
        position: absolute;
        top: 10px;
        right: 10px;
    }
    .low-stock {
        background-color: #dc3545 !important;
    }
    .medium-stock {
        background-color: #ffc107 !important;
    }
    .high-stock {
        background-color: #28a745 !important;
    }
    .stats-card {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
        color: white;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 20px;
    }
</style>
{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-6 fw-bold mb-2">
                        <i class="bi bi-box-seam text-primary me-3"></i>Products Management
                    </h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
                            <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Products</li>
                        </ol>
                    </nav>
                </div>
                <div>
                    <a href="{{ path('app_dashboard') }}" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
                    </a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('product_new') }}" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-2"></i>Add Product
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="stats-card text-center">
                <i class="bi bi-box-seam fs-1 mb-2"></i>
                <h3 class="mb-1">{{ products|length }}</h3>
                <p class="mb-0">Total Products</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-0" style="background: linear-gradient(135deg, #28a745 0%, #1e7e34 100%); color: white;">
                <div class="card-body">
                    <i class="bi bi-check-circle fs-1 mb-2"></i>
                    <h3 class="mb-1">{{ products|filter(p => p.stock > 10)|length }}</h3>
                    <p class="mb-0">In Stock</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-0" style="background: linear-gradient(135deg, #ffc107 0%, #e0a800 100%); color: white;">
                <div class="card-body">
                    <i class="bi bi-exclamation-triangle fs-1 mb-2"></i>
                    <h3 class="mb-1">{{ products|filter(p => p.stock <= 10 and p.stock > 0)|length }}</h3>
                    <p class="mb-0">Low Stock</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-0" style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%); color: white;">
                <div class="card-body">
                    <i class="bi bi-x-circle fs-1 mb-2"></i>
                    <h3 class="mb-1">{{ products|filter(p => p.stock == 0)|length }}</h3>
                    <p class="mb-0">Out of Stock</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Products Display -->
    {% if products|length > 0 %}
        <div class="row">
            {% for product in products %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card product-card h-100 position-relative">
                        <!-- Stock Badge -->
                        <span class="badge stock-badge {{ product.stock == 0 ? 'low-stock' : (product.stock <= 10 ? 'medium-stock' : 'high-stock') }}">
                            {{ product.stock == 0 ? 'Out of Stock' : (product.stock <= 10 ? 'Low Stock' : 'In Stock') }}
                        </span>
                        <!-- Product Image -->
                        <div class="text-center pt-3 pb-2">
                            {% if product.image %}
                                <img src="{{ asset('uploads/products/' ~ product.image) }}" alt="{{ product.name }}" class="img-thumbnail border border-primary" style="max-width: 120px; max-height: 120px; object-fit: cover;">
                            {% else %}
                                <span class="d-inline-block bg-light border rounded p-3">
                                    <i class="bi bi-image text-secondary" style="font-size: 2.5rem;"></i>
                                </span>
                            {% endif %}
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p class="card-text flex-grow-1">{{ product.description ?: 'No description available' }}</p>
                            <div class="mb-3">
                                <div class="product-price">${{ product.price }}</div>
                                <small class="text-muted">Stock: {{ product.stock }} units</small>
                            </div>
                            <div class="d-flex gap-2 mt-auto">
                                <a href="{{ path('product_show', {'id': product.id}) }}" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye me-1"></i>View
                                </a>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-outline-secondary btn-sm">
                                        <i class="bi bi-pencil me-1"></i>Edit
                                    </a>
                                    <form method="post" action="{{ path('product_delete', {'id': product.id}) }}" style="display:inline-block;">
                                        <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Delete this product?')">
                                            <i class="bi bi-trash me-1"></i>Delete
                                        </button>
                                    </form>
                                {% endif %}
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <small class="text-muted">
                                <i class="bi bi-calendar me-1"></i>
                                Added {{ product.createdAt ? product.createdAt|date('M d, Y') : 'Unknown' }}
                            </small>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <!-- Empty State -->
        <div class="text-center py-5">
            <i class="bi bi-box-seam display-1 text-muted"></i>
            <h3 class="mt-3">No products found</h3>
            <p class="text-muted">Start by adding your first product to the system.</p>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('product_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Add Your First Product
                </a>
            {% endif %}
        </div>
    {% endif %}
</div>
{% endblock %}
